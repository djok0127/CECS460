               ; john tramel
               ; cecs 460
               ; trambler assembler help
               ; fixed label 20190124 - thanks sc
               
               
               ZEROS		EQU	   0000
               ONE			EQU	   0001
               COUNTER 	EQU    R9
               ANYADRS		EQU	   0460
               
               
               START   	ENINT
0000 1E00               
               ;initialize R0/R1 to 0
               			
               			LOAD COUNTER, ZEROS
0001 AE09 0000
               			LOAD R0, ZEROS
0003 AE00 0000
               			
               ; main loop incrementing R0
               
               FIRST		ADD R0, ONE
0005 8200 0001
               			JUMP FIRST
0007 A400 0005
               			
               ; address for interrupt service routine
               
               			ADDRESS 0300
               
               ; set up for loop in isr
               
               ISR
               			INPUT RA, ANYADRS
0300 A20A 0460
               			AND ,RA 0001
0302 8A0A 0001
               			JUMPZ DECREMENT
0304 AA00 030b
               			ADD R9, ONE
0306 8209 0001
               			OUTPUT R9, 1234
0308 B809 1234
               			RETEN
030A 4600               			
               DECREMENT	SUB	R9, ONE
030B DC09 0001
               			OUTPUT R9, 1234
030D B809 1234
               			RETEN
030F 4600               			
               ; ISR vectored through 0FFE
               
               			ADDRESS 0FFE
               			
               ENDIT		JUMP ISR
0FFE A400 0300
               
               			END
